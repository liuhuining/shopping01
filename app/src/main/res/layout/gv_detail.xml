<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/iv_detail"
        android:src="@mipmap/ic_launcher"
        android:layout_width="200dp"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_describe"
        android:layout_below="@+id/iv_detail"
        android:layout_alignLeft="@+id/iv_detail"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text"
        android:textSize="16dp"
        android:textColor="@color/colorAccent"
        android:id="@+id/tv_current_price"
        android:layout_below="@+id/tv_describe"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_alignBottom="@id/textView2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text"
        android:textSize="12dp"
        android:id="@+id/tv_cost_price"
        android:layout_alignBottom="@+id/tv_current_price"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:text="Text"
        android:id="@+id/tv_sales"
        android:layout_alignRight="@+id/iv_detail"
        android:layout_alignBottom="@+id/tv_current_price"/>
    <TextView
        android:text="原￥"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/tv_current_price"
        android:layout_below="@+id/tv_describe"
        android:layout_toRightOf="@+id/tv_current_price" />
    <TextView
        android:text="￥"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/colorAccent"
        android:layout_alignLeft="@id/iv_detail"
        android:layout_below="@id/tv_describe"
        android:id="@+id/textView2" />
    <TextView
        android:text="销量"
        android:textSize="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_sales"
        android:layout_toLeftOf="@id/tv_sales"/>

</RelativeLayout>